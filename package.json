{
  "private": true,
  "bin": "",
  "workspaces": [
    "packages/*",
    "websites"
  ],
  "packageManager": "pnpm@7.3.0",
  "scripts": {
    "bootstrap": "npm i && lerna bootstrap",
    "serve": "vue-cli-service serve",
    "test": "vitest",
    "lint": "vue-cli-service lint",
    "build": "rimraf dist && esno ./build/build.ts",
    "build:style": "cd packages/theme-chalk && rimraf dist && npm run build",
    "website-dev": "webpack serve --config ./website/webpack.config.js",
    "website-build": "webpack build --config ./website/webpack.config.js",
    "docs:dev": "pnpm run -C website dev",
    "docs:build": "pnpm run -C website build",
    "docs:serve": "pnpm run -C website serve",
    "gh-pages": "git subtree push --prefix website/.vitepress/dist origin gh-pages",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {
    "@basic-comp/components": "workspace:*",
    "@basic-comp/hooks": "workspace:*",
    "@basic-comp/utils": "workspace:*",
    "@element-plus/icons-vue": "^0.2.7",
    "@rollup/plugin-commonjs": "^21.1.0",
    "core-js": "^3.27.2",
    "element-plus": "^2.2.29",
    "fast-glob": "^3.2.12",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-typescript": "^7.20.13",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@sepveneto/eslint-config": "^0.8.1",
    "@types/fs-extra": "^11.0.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/babel-preset-jsx": "^1.4.0",
    "@vue/compiler-sfc": "^3.2.47",
    "@vue/test-utils": "^2.3.1",
    "@webpack-cli/serve": "^1.7.0",
    "babel-loader": "^8.3.0",
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "esbuild": "^0.12.29",
    "eslint": "^8.39.0",
    "esno": "^0.9.1",
    "fs-extra": "^11.1.0",
    "highlight.js": "^11.7.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^21.1.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.6.6",
    "markdown-it-chain": "^1.3.0",
    "markdown-it-container": "^3.0.0",
    "mini-css-extract-plugin": "^0.11.3",
    "prettier": "^2.8.3",
    "progress-bar-webpack-plugin": "^2.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-esbuild": "^4.10.3",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.58.0",
    "sass-loader": "^10.4.1",
    "style-loader": "^2.0.0",
    "transliteration": "^2.3.5",
    "ts-loader": "^9.4.2",
    "ts-morph": "^17.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.7.4",
    "url-loader": "^4.1.1",
    "vite": "^4.1.4",
    "vitest": "^0.29.2",
    "vue-loader": "^16.8.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "@types/markdown-it",
        "@algolia/client-search"
      ]
    }
  }
}
